echo "Preparing sandbox environment..."
export _JAVA_OPTIONS=-Duser.home="$SNAP_USER_COMMON"

#The RuneLite Launcher does not autupdate, and is not built into the snap directly.
#As such, it needs to be triggered into downloading the fresh .jar by pushing a snap update
if [[ -f $SNAP_USER_COMMON/runelite.jar ]]; then
	if [[ $(sha256sum $SNAP_USER_COMMON/runelite.jar | cut -d " " -f 1) != "7c6790f3490fbf318682265e98bdb7d0f554faf3af7afb5cb97bbe37c8431d60" ]]; then
		rm $SNAP_USER_COMMON/runelite.jar
		echo "Clearing older RuneLite.jar"
	fi
fi

source sandbox-configure

if [[ -f "$SNAP_USER_DATA/runelite-user-config" ]]
then
        echo "Found RuneLite config"
        source "$SNAP_USER_DATA/runelite-user-config" # User can add exports/vars$
        echo "Finished reading RuneLite config"
fi

DownloadRuneLite(){
	notify-send 'RuneScape snap' 'This client bundle is authored by Hmm and recieves no official support from Jagex. Furthermore, the RuneLite client is made by the community and is effectively experimental.' --icon=dialog-information -t 10
	echo Downloading RuneLite
	if ! wget "https://github.com/runelite/launcher/releases/download/2.0.0/RuneLite.jar" -O "$SNAP_USER_COMMON/runelite.jar"
	then
		notify-send 'RuneScape snap' 'Unable to perform first time setup, is the network fully functional?' -t 10
		exit 1
	fi
}

if [[ ! -f "$SNAP_USER_COMMON/runelite.jar" ]]
then
	echo "Launcher doesn't appear to exist, running setup!"
	DownloadRuneLite
fi

echo "Launching RuneLite"
"$SNAP/usr/lib/jvm/java-11-openjdk-amd64/bin/java" -jar "$SNAP_USER_COMMON/runelite.jar" "$runesnap_game_options" "$@"
